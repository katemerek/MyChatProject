<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.katemerek.clients.controllers.ChatControllerNew">
   <children>
      <Label layoutX="164.0" layoutY="1.0" text="Добро пожаловать в MyChat!" textFill="#bf1717">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
      <TextField fx:id="tf" layoutY="272.0" prefHeight="49.0" prefWidth="600.0" promptText="Type a message..." />
      <Button fx:id="buttonSend" layoutX="502.0" layoutY="354.0" mnemonicParsing="false" onAction="#writeMessage" text="Отправить" />
      <Button fx:id="buttonBegin" layoutX="370.0" layoutY="354.0" mnemonicParsing="false" onAction="#beginClientChat" text="Начать общение" />
      <StackPane layoutY="32.0" prefHeight="238.0" prefWidth="601.0">
         <children>
            <TextArea fx:id="ta" disable="false" onInputMethodTextChanged="#writeMessage" prefHeight="229.0" prefWidth="600.0" style="-fx-background-color: red;">
               <font>
                  <Font name="Arial Bold" size="25.0" />
               </font>
            </TextArea>
         </children>
      </StackPane>
   </children>
</AnchorPane>
